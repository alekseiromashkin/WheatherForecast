<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.DailyForecast.Daytpart.Name" parent="@android:style/Widget.TextView">
        <item name="android:paddingLeft">@dimen/text_daypart__paddingLeft</item>
        <item name="android:paddingRight">@dimen/text_daypart__paddingRight</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_daypart__textSize</item>
        <item name="android:textColor">@color/text_daypart__textColor</item>
    </style>

    <style name="AppTheme.DailyForecast.Daytpart.Temperature" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/text_daypart_temperature__paddingLeft</item>
        <item name="android:paddingRight">@dimen/text_daypart_temperature__paddingRight</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/text_daypart_temperature__textSize</item>
        <item name="android:textColor">@color/text_daypart_temperature__textColor</item>
    </style>

</resources>
